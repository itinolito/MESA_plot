# TEXT
text.color : (0.2,0.2,0.2)
text.usetex : True
font.size : 13
legend.fontsize : 10


# AXES
axes.titlesize : 16
axes.labelsize : 14
axes.edgecolor : (0.1,0.1,0.1) #Normalized RGB colours (from 0 to 1 instead of 0 to 255)
axes.labelcolor : (0.1,0.1,0.1)
axes.linewidth : 1
axes.spines.top : True
axes.spines.right : True
axes.spines.bottom : True
axes.spines.left : True

# GRID
#axes.grid : True
#grid.alpha : 0.7
#grid.linestyle : --
#grid.linewidth : 0.6

#["ffd700", "ffb14e", "fa8775", "ea5f94", "cd34b5", "9d02d7", "0000ff","4a4848", "000000"]
