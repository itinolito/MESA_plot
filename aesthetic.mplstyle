# LINES
axes.prop_cycle : cycler('color', ["006b87","569d8b","899c40","dbb45a","f57d26","d1001a","9c3c76","d0a1bb","e982be"]) #+ cycler('ls', ['-', '--', ':', '-.'])
lines.linewidth : 1.5
lines.markeredgewidth : 0.0

# SCATTER PLOT
scatter.marker : .

# TICKS
xtick.labelsize : 13
xtick.color : (0.2,0.2,0.2)
xtick.direction : in
xtick.major.size : 5.0
xtick.minor.size : 3.0

ytick.labelsize : 13
ytick.color : (0.2,0.2,0.2)
ytick.direction : in
ytick.major.size : 5.0
ytick.minor.size : 3.0

# FIGURE OUTPUT 
figure.figsize  : 8, 5
figure.dpi : 150
savefig.dpi : 200